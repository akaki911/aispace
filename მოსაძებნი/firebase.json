{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "headers": [
      {
        "source": "/api/files/content/**",
        "headers": [
          { "key": "Cache-Control", "value": "no-store" },
          { "key": "Access-Control-Allow-Origin", "value": "https://aispace.bakhmaro.co" },
          { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
          { "key": "Vary", "value": "Origin" }
        ]
      },
      {
        "source": "/api/attachments/backend-missing-endpoints.zip",
        "headers": [
          { "key": "Content-Type", "value": "application/zip" },
          { "key": "Content-Disposition", "value": "attachment; filename=\"aispace-backend-endpoints.zip\"" },
          { "key": "Cache-Control", "value": "no-store" },
          { "key": "Pragma", "value": "no-cache" },
          { "key": "Vary", "value": "Origin" },
          { "key": "Access-Control-Allow-Origin", "value": "*" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": {
          "functionId": "api",
          "region": "us-central1"
        }
      }
    ]
  }
}
